# Preventive Maintenance Geofence Toggle
# If set to 'false', backend will NOT require latitude/longitude nor enforce geofence
# checks for mobile preventive task access. Default is 'true'.
PREVENTIVE_GEOFENCE_ENABLED=true
# Copy to .env and fill in your values
# Example for local Postgres running on default port
# DATABASE_URL format: postgresql://USER:PASSWORD@HOST:PORT/DB?schema=public
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/cmms?schema=public"

# JWT secret for signing tokens (use a strong, random value in production)
JWT_SECRET="replace_with_a_long_random_secret"

# API server port
PORT=4000

# Frontend URL used in reset links
FRONTEND_URL="http://localhost:3000"

# Directory where uploaded files are stored
UPLOAD_DIR="uploads"

# Twilio configuration for sending OTP SMS (optional)
# If TWILIO_ACCOUNT_SID and TWILIO_AUTH_TOKEN are not set, SMS sending will be skipped.
TWILIO_ACCOUNT_SID="ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
TWILIO_AUTH_TOKEN="your_auth_token"

# Prefer using Messaging Service SID if you have one configured in Twilio
# Otherwise, set TWILIO_FROM_NUMBER to a verified or purchased phone number
TWILIO_MESSAGING_SERVICE_SID="MGxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
TWILIO_FROM_NUMBER="+15551234567"

